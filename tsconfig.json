{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "build",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "strict": true /* Enable all strict type-checking options. */,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    /**
     * TODO Remove `skipLibCheck` after this PR is merged:
     * https://github.com/ripple/ripple-lib/pull/993
     */
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "paths": {
      "ripple-keypairs": ["./types/ripple-keypairs"]
    }
  }
}
